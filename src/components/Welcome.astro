<style>
  body {
    font-family: var(--font-body);
    --position: 0%;
  }
  h1,
  h2,
  h3 {
    font-family: var(--font-heading);
  }

  /* Hero */
  .hero-bg {
    background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6));
    /*url("http://static.photos/indoor/1200x630/104");*/
    background-size: cover;
    background-position: center;
  }

  /* Section Titles */
  .section-title {
    position: relative;
  }
  .section-title::after {
    content: "";
    display: block;
    width: 60px;
    height: 2px;
    background: var(--stone-dark);
    margin: 0.5rem auto 0;
  }

  /* Service Cards */
  .service-card {
    padding: 2rem;
    border-radius: 0.75rem;
    background: white;
    color: #333;
    border: 1px solid var(--stone-dark);
  }

  .service-card h3 {
    margin-top: 1rem;
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
    font-weight: 600;
    font-family: var(--font-heading);
    color: var(--primary);
  }
  .service-card p {
    color: #4b5563;
  }

  /* Icons */
  .icon-circle {
    width: 4rem;
    height: 4rem;
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    border: 1px solid var(--stone-dark);
    color: var(--primary);
  }

  /* Gallery */
  .gallery-img {
    border-radius: 0.5rem;
    width: 100%;
    height: 22rem;
    object-fit: cover;
    border: 1px solid var(--stone-dark);
    transition: all 0.3s ease;
  }
  .gallery-item:hover .gallery-img {
    /*transform: scale(1.03);*/
    border-color: var(--primary);
  }

  /* CTA Buttons */
  .cta {
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    border-radius: 9999px;
    transition: all 0.3s ease;
    text-align: center;
    background: var(--primary);
    color: white;
    border: 1px solid var(--stone-dark);
  }
  .cta:hover {
    background: var(--stone);
    color: var(--primary);
  }

  .image-container {
    max-width: 800px;
    max-height: 90vh;
  }

  .slider-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: left;
    aspect-ratio: 1;
  }

  .image-before {
    position: absolute;
    inset: 0;
    opacity: calc(var(--position));
  }

  .slider {
    position: absolute;
    inset: 0;
    cursor: pointer;
    opacity: 0;
    /* for Firefox */
    width: 100%;
    height: 100%;
  }

  .slider:focus-visible ~ .slider-button {
    outline: 5px solid black;
    outline-offset: 3px;
  }

  .slider-line {
    position: absolute;
    inset: 0;
    width: 0.2rem;
    height: 100%;
    background-color: var(--primary);
    /* z-index: 10; */
    left: var(--position);
    transform: translateX(-50%);
    pointer-events: none;
  }

  .slider-button {
    position: absolute;
    background-color: white;
    color: black;
    padding: 0.5rem;
    border-radius: 100vw;
    display: grid;
    place-items: center;
    top: 50%;
    left: var(--position);
    transform: translate(-50%, -50%);
    pointer-events: none;
    /* z-index: 100; */
    box-shadow: 1px 1px 1px hsl(0, 50%, 2%, 0.5);
  }

  /* Modal */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.8);
    justify-content: center;
    align-items: center;
  }

  .modal-content {
    border-radius: 0.5rem;
    margin: auto;
    display: block;
    width: 80%;
    max-width: 700px;
  }

  .modal-close {
    position: absolute;
    top: 15px;
    right: 35px;
    color: #f1f1f1;
    font-size: 40px;
    font-weight: bold;
    transition: 0.3s;
    cursor: pointer;
  }

  @keyframes splash-animation {
    0% {
      top: 0;
      left: 0;
    }
    100% {
      top: -100%;
    }
  }

  .splash {
    animation: splash-animation 1s 1s ease forwards;
  }
</style>

<script>
  const container = document.querySelector(".result-grid");
  const slider = document.querySelector(".slider");
  if (slider) {
    slider.addEventListener("input", (e) => {
      container.style.setProperty("--position", `${e.target.value}%`);
      console.log(e.target.value);
    });
  }

  const modal = document.getElementById("image-modal");
  const modalImg = document.getElementById("modal-image");
  const galleryImages = document.querySelectorAll(".gallery-item");
  const closeModal = document.querySelector(".modal-close");

  galleryImages.forEach((image) => {
    image.addEventListener("click", (e) => {
      e.preventDefault();
      modal.style.display = "flex";
      modalImg.src = image.href;
    });
  });

  if (closeModal) {
    closeModal.addEventListener("click", () => {
      modal.style.display = "none";
    });
  }

  window.addEventListener("click", (e) => {
    if (e.target == modal) {
      modal.style.display = "none";
    }
  });
</script>
